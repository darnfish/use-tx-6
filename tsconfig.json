{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"jsx": "react",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"outDir": "lib/",
		"sourceMap": true,
		"declaration": true,
		"inlineSources": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"strictFunctionTypes": true,
		"skipLibCheck": true,
		"noImplicitThis": true,
		"noImplicitReturns": true
	}
}